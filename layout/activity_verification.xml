<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    android:background="@drawable/fnnbk"
    tools:context=".VerificationActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="111dp"
        android:layout_height="122dp"
        app:srcCompat="@drawable/fnn1"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/EmailVerificationText1"
        android:text="Didn't Receive Email?"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_verify"
        android:layout_marginTop="30dp"
        android:text="Click Here to Resend Mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custombtn"
        android:textColor="#ffffff"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/backtologin"
        android:text="BACK TO LOGIN"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"/>

    <TextView
        android:id="@+id/deleteUser"
        android:text="RESET FOR NEW REGISTRATION"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/counter"
        android:layout_marginTop="40dp"
        android:textColor="@drawable/custombtn"
        android:visibility="invisible"/>

</LinearLayout>