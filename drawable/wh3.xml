<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="#171DE0DA"
                android:endColor="#2DB5DBD9"
                android:angle="270"/>

            <stroke
                android:width="1dp"
                android:color="@android:color/transparent"/>

            <corners
                android:radius="10dp"/>

            <padding
                android:right="10dp"
                android:bottom="10dp"
                android:left="10dp"
                android:top="10dp"/>
        </shape>
    </item>
</selector>